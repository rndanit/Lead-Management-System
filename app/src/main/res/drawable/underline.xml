<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Add the curved yellow background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/maincolor"/> <!-- Item background color -->
            <corners android:radius="100dp"/> <!-- Make the corners curved -->
            <size android:height="52dp"/> <!-- Adjust this if needed -->
        </shape>
    </item>
    <!-- Add the white underline -->
    <item
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Underline color -->
            <size android:height="1dp"/>
        </shape>
    </item>
</layer-list>
