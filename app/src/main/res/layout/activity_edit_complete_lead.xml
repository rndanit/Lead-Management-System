<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.EditCompleteLeadActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEditLead"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/maincolor"
        app:navigationIcon="@drawable/back"
        app:title="Edit Lead"
        app:titleCentered="true"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="18dp"
                android:drawableTint="@color/maincolor"
                android:hint="Name"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/company_scaled"
                android:drawablePadding="18dp"
                android:hint="Edit Company"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etSource"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/leadsource_scaled"
                android:drawablePadding="18dp"
                android:hint="Lead Source"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etLeadDetail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/leaddetail_scaled"
                android:drawablePadding="18dp"
                android:hint="Lead Detail"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/leadsource_scaled"
                android:drawablePadding="18dp"
                android:hint="Lead Price"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:backgroundTint="#CECECE"
                android:drawableLeft="@drawable/phone2_scaled"
                android:drawablePadding="18dp"
                android:hint="Number"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                app:backgroundTint="@color/maincolor"
                android:layout_marginTop="8dp"
                android:text="Edit Lead"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>